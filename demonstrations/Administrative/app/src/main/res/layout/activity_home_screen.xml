<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rainbow_swirls_vector_background_523382"
    android:orientation="vertical"
    tools:context="com.example.sambulo.administrative.HomeScreen"
    android:weightSum="1">

    <TextView
        android:id="@+id/homeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="326dp"
        android:layout_height="115dp"
        android:layout_marginBottom="25dp"
        app:srcCompat="@mipmap/bies"
        android:layout_weight="0.16" />


    <Button
        android:text="@string/btnTckShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnTckShop"
        android:layout_weight="0.03"
        android:onClick="setBtnTckShop"
        style="@android:style/Widget.DeviceDefault.Button.Inset" />

    <Button
        android:id="@+id/btnClasses"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:onClick="setBtnClasses"
        android:text="@string/btnClasses" />

    <Button
        android:id="@+id/btnReport"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:onClick="setBtnReport"
        android:text="@string/btnReport" />

    <Button
        android:id="@+id/btnAdmin"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:onClick="setBtnAdmin"
        android:text="@string/btnAdmin" />

</LinearLayout>
