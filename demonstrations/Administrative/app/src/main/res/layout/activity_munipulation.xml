        <EditText
            android:id="@+id/stdFatherphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone" />

        <EditText
            android:id="@+id/stdMothername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/stdMotheremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/stdMotherphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone" />

        <EditText
            android:id="@+id/stdDoctorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
