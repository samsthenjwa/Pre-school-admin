<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maintenance"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    android:background="@drawable/rainbow_swirls_vector_background_523382"
    android:orientation="vertical"
    tools:context="com.example.sambulo.administrative.maintenance"
    android:weightSum="1">




    <Spinner
        android:id="@+id/comboSpinner"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:textStyle="normal|bold"
        android:paddingTop="15dp"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/maintenanceTitle"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:paddingStart="15dp"
        android:textSize="24sp"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/maintenanceDescription"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_weight="0.17"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnMain"
        style="@android:style/Widget.DeviceDefault.Button.Inset"

        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


</LinearLayout>
